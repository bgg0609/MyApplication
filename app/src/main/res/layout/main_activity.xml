<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/list_divider_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_height"
            android:background="@color/footer_tab_bg_color"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvJob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/bottom_tab_job_selector"
                android:gravity="center"
                android:text="@string/bottom_tab_job"
                android:textColor="@drawable/bottom_tab_text_selector"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/bottom_tab_msg_selector"
                android:gravity="center"
                android:text="@string/bottom_tab_msg"
                android:textColor="@drawable/bottom_tab_text_selector"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/tvMine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/bottom_tab_mine_selector"
                android:gravity="center"
                android:text="@string/bottom_tab_mine"
                android:textColor="@drawable/bottom_tab_text_selector"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>