<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/nav_btn_return_white" />


    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/common_http_error_text"
        android:textColor="@color/text_net_error_color"
        android:textSize="@dimen/text_size_15sp" />


    <Button
        android:id="@+id/ReflashLayoutBtn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/common_http_error_btn_retry"
        android:textColor="@color/text_net_retry_color"
        android:textSize="@dimen/text_size_18sp" />

</LinearLayout>